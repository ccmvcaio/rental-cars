<h3>Locações</h3>
<%= link_to 'Voltar', root_path %>

<%= form_with url: search_rentals_path, method: :get, local: true do |f| %>
  <%= f.label :q, 'Buscar locação'%>
  <%= f.text_field :q %>
  <%= f.submit 'Buscar' %>
<% end %>

<% if @rentals.empty? %>
  <h3>Nenhuma locação registrada!</h3>
<% end %>

<% @rentals.each do |rental| %>
  <%= link_to "#{rental.client.name} - #{rental.client.cpf} - 
               #{l(rental.start_date)}", rental %>
<% end %>

<%= link_to 'Agendar nova locação', new_rental_path %>